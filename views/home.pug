extends layouts/main-layout.pug

block content
    section.py-3.text-center.container
        div.row.py-lg-1
            div.col-lg-6.col-md-8.mx-auto
                if prods.length > 0
                    h1.fw-light Listado de Productos
                else
                    h1.fw-light Sin Productos

        if prods.length > 0
            div.py-2.bg-light
                div.container
                    div.row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
                        //- Esto se tiene que repetir https://picsum.photos/id/237/200/200
                        each product in prods
                            div.col
                                div.card.shadow-sm
                                    img.card-img-top(src=`${product.thumbnail}` alt='img1' width='100%' height='100%')
                                    div.card-body
                                        p.card-text #{product.title}
                                        div.d-flex.justify-content-between.align-items-center
                                            div.btn-group
                                                button.btn.btn-sm.btn-outline-secondary(type='button') Ver
                                                button.btn.btn-sm.btn-outline-secondary(type='button') Editar
                                            small.text-muted $ #{product.price}